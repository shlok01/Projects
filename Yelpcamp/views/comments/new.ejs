<%- include("../partials/header") %>

<h1>THIS IS THE COMMENT FORM</h1>
<div class="container">
    <div class="row">
        <h3 style="text-align: center;">Add a New Comment to <%= campground.name %> </h3>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Add Comment">
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div> <!-- this is style tag div -->
    </div>
</div>


<%- include("../partials/footer") %>